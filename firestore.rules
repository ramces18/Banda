rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read their own data. Leaders can read/write any user data.
    match /users/{userId} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rol == "lider";
      allow read: if request.auth.uid == userId;
    }

    // Authenticated users can read announcements.
    // Leaders and Dirigentes can create/edit/delete announcements.
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rol == "lider" ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rol == "dirigente");
    }
  }
}
